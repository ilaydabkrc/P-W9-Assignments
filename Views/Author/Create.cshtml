@model Week9.ViewModels.AuthorViewModel
@{
    ViewData["Title"] = "Yeni Yazar Ekle";
}

<h1>Yeni Yazar Ekle</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="FirstName">Ad:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Soyad:</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth">Doğum Tarihi:</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn">Kaydet</button>
    <a href="/Author/List" class="btn">İptal</a>
</form>