@model List<Week9.ViewModels.AuthorViewModel>
@{
    ViewData["Title"] = "Yazarlar";
}

<h1>Yazarlar</h1>
<a href="/Author/Create" class="btn">Yeni Yazar Ekle</a>

<table>
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Doğum Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="/Author/Details/@author.Id">Detay</a> |
                    <a href="/Author/Edit/@author.Id">Düzenle</a> |
                    <a href="/Author/Delete/@author.Id" onclick="return confirm('Silmek istediğinizden emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>